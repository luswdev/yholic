<%- js('lib/justified-gallery/jquery.justifiedGallery.min.js') %>
<%- js_version('js/main.js') %>
<!-- Google Analytics -->
<% if (theme.plugins.google_analytics) { %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=<%= theme.plugins.google_analytics %>"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', '<%= theme.plugins.google_analytics %>');
    </script>
<% } %>
<!-- Disqus Comments -->
<% if (theme.plugins.disqus_shortname){ %>
    <script type="text/javascript">
        var disqus_shortname = '<%= theme.plugins.disqus_shortname %>';

        (function(){
            var dsq = document.createElement('script');
            dsq.type = 'text/javascript';
            dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/<% if (page.comments){ %>embed.js<% } else { %>count.js<% } %>';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        }());
    </script>
<% } %>
