<% if (index) { %>
    <% if (post.link) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
    <% } else if (post.title) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    <% } else { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>">Untitled</a>
    <% } %>
<% } else { %>
    <% if (page.dominantColor) { %>
        <h1 class="<%= class_name %>" itemprop="name headline" style="color: rgb(<%= page.dominantColor[0] %>, <%=page.dominantColor[1] %>, <%= page.dominantColor[2] %>);">
    <% } else { %>
        <h1 class="<%= class_name %>" itemprop="name headline">
    <% } %>
        <%= post.title %>
        <% if (post.subtitle) { %>
            <% post.subtitle.split(",").forEach(element => { %>
                (<%= element.trim() %>)
            <%}) %>
        <% } %>
    </h1>
<% } %>

